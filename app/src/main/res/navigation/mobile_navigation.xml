<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="se.c19aky.geolocations.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="se.c19aky.geolocations.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_navigation_dashboard_to_locationFragment"
            app:destination="@+id/navigation_location" />
    </fragment>

    <fragment
        android:id="@+id/navigation_settings"
        android:name="se.c19aky.geolocations.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/navigation_location"
        android:name="se.c19aky.geolocations.ui.location.LocationFragment"
        android:label="Location"
        tools:layout="@layout/fragment_location" >
        <argument
            android:name="id"
            app:argType="string" />
    </fragment>

</navigation>